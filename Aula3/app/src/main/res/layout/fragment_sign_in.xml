<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framelayout_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="br.com.targettrust.aula3.fragments.SignInFragment">

    <LinearLayout
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:padding="50dp"
            android:id="@+id/imageview_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/logo"
            android:contentDescription="@string/imageview_cover_description" />

        <!-- If style property is not defined on manifest, the property "style" can be used to define item style. -->
        <!-- style="@style/edit_text_style" -->
        <EditText
            android:layout_marginBottom="5dp"
            android:id="@+id/edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edittext_email_hint"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_marginBottom="5dp"
            android:id="@+id/edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edittext_password_hint"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_margin="3dp"
                android:id="@+id/button_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/button_register_text" />

            <Button
                android:layout_margin="3dp"
                android:id="@+id/button_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/button_sign_in_text" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
